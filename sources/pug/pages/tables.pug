extends  ../_skeleton

//- Includes
include ../elements/_ui-table-custom

block variables
  - pageName = 'Tables'

//- Page
block page
  include ../sections/_header-center
  +breadcrumbs-header({
    text: "Choose Your Style"
  })

  // Hover Row Table
  section.section.section-lg.bg-default.text-center
    .container
      .row.justify-content-sm-center
        .col-md-10.col-xl-8
          h3 Hover Row Table
          +table('table-hover')

  ="\n"

  // Color Header Row Table
  section.section.section-lg.bg-default.text-center
    .container
      .row.justify-content-sm-center
        .col-md-10.col-xl-8
          h3 Color header table
          +table('table-color-header')

  ="\n"

  // Bordered Row Table
  section.section.section-lg.bg-default.text-center
    .container
      .row.justify-content-sm-center
        .col-md-10.col-xl-8
          h3 Bordered table
          +table('table-custom-bordered')
  ="\n"

  hr

  // Page Footer
  include ../sections/_footer
