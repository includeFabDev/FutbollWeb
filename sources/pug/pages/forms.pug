extends  ../_skeleton

//- Includes
include ../elements/_contact-form
include ../elements/_subscribe-form

block variables
  - pageName = 'Forms'

//- Page
block page
  include ../sections/_header-center
  +breadcrumbs-header({
    text: "Choose Your Style"
  })

  // Forms
  section.section.section-lg.bg-default.text-center
    .container
      h3 Login Form
      .row.justify-content-sm-center
        .col-md-8.col-lg-6.col-xl-4
          // RD Mailform
          form.rd-mailform
            .form-wrap.form-wrap-validation
              input#forms-login-name.form-input(type="text" name="name" data-constraints='@Required')
              label.form-label(for="forms-login-name") E-mail or nickname
            .form-wrap.form-wrap-validation
              input#forms-login-password.form-input(type="password" name="password" data-constraints="@Required")
              label.form-label(for="forms-login-password") Password
            .form-button
              button.button.button-block.button-primary.button-nina(type="submit") Sign In

      p.offset-custom-1.text-gray-light or enter with

      .group-xs.group-middle
        a.icon.novi-icon.icon-md-smaller.icon-circle.icon-filled.mdi.mdi-facebook(href='#')
        a.icon.novi-icon.icon-md-smaller.icon-circle.icon-filled.mdi.mdi-twitter(href='#')
        a.icon.novi-icon.icon-md-smaller.icon-circle.icon-filled.mdi.mdi-google(href='#')
  ="\n"

  // Contact us
  section.section.section-lg.bg-default.text-center
    .container
      .row.justify-content-sm-center
        .col-md-10.col-xl-8
          h3 Contact us
          +contact-form
  ="\n"

  // Contact us
  section.section.section-lg.bg-default.text-center
    .container
      .row.justify-content-sm-center
        .col-md-10.col-xl-8
          h3 Contact Form with ReCaptcha

          +contact-form
            .col-lg-12
              // Google captcha
              .form-wrap.form-validation-left.text-start
                .recaptcha#captcha1( data-sitekey='6LfZlSETAAAAAC5VW4R4tQP8Am_to4bM3dddxkEt', data-auto-size='' )
  ="\n"

  // NewsLetter
  section.section.section-lg.bg-default
    .container
      h3.text-center Newsletter
      .row.justify-content-md-center
        .col-md-8.col-xl-6
          .text-gray-light
            p Keep up with our always upcoming news and updates.
            p.offset-top-0 Enter your e-mail and subscribe to our newsletter.
            
          article.inline-message
            p Subscribe form works as an e-mail newsletter. To activate such form with an enabled MailChimp service, replace the .rd-mailform class with .mailchimp-mailform and the form's action with MailChimp subscription URL.
            p To activate the Campaign Monitor service, you need to replace the formâ€™s .rd-mailform class with .campaign-mailform and copy the form's action and the name of the input field from the form generated by Campaign Monitor service.
            
          +subscribe-form()
  ="\n"

  hr

  // Page Footer
  include ../sections/_footer
